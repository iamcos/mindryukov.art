---
interface Props {
  id?: string;
  title?: string;
  className?: string;
}

const { id, title, className = '' } = Astro.props;
---

<section id={id} class={`py-16 ${className}`}>
  <div class="container mx-auto px-4">
    {title && (
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white">
        {title}
      </h2>
    )}
    <slot />
  </div>
</section>

